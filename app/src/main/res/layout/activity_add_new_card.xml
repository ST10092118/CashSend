<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Header Section -->
    <TextView
        android:id="@+id/addNewCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD NEW CARD"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#2196F3"
    android:paddingVertical="12dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card Number Input -->
    <EditText
        android:id="@+id/et_card_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Card number"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:inputType="number"
        android:backgroundTint="#D3D3D3"
    android:background="@drawable/rounded_border"
    app:layout_constraintTop_toBottomOf="@id/addNewCardTitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card Holder Name Input -->
    <EditText
        android:id="@+id/et_card_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Name of card holder"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:inputType="textPersonName"
        android:backgroundTint="#D3D3D3"
        android:background="@drawable/rounded_border"
        app:layout_constraintTop_toBottomOf="@id/et_card_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Expiration Date and CVV Inputs -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/et_card_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Expiration Date Input -->
        <EditText
            android:id="@+id/et_expiration_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Expiration date (MM/YY)"
            android:padding="16dp"
            android:inputType="text"
            android:backgroundTint="#D3D3D3"
            android:background="@drawable/rounded_border" />

        <!-- CVV Input -->
        <EditText
            android:id="@+id/et_cvv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="C V V"
            android:padding="16dp"
            android:inputType="numberPassword"
            android:backgroundTint="#D3D3D3"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_border" />
    </LinearLayout>

    <!-- Add Button -->
    <Button
        android:id="@+id/btn_add_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:background="#FF0000"
        android:textColor="@android:color/white"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
